<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/dagang2"
    android:layout_height="match_parent"
    tools:context="com.kelique.rcapp.TambahAktifity">

    <EditText
        android:id="@+id/textView2"
        android:layout_width="292dp"
        android:layout_height="47dp"
        android:hint="Nama lengkap"
        android:paddingLeft="15dp"
        android:background="@drawable/wijetkrem"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="16dp"
        android:layout_marginTop="13dp"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/textView3"
        android:layout_alignStart="@+id/textView3" />

    <EditText
        android:id="@+id/textView3"
        android:layout_width="292dp"
        android:layout_height="47dp"
        android:layout_marginTop="5dp"
        android:hint="Alamat Lengkap"
        android:paddingLeft="15dp"
        android:background="@drawable/wijetkrem"
        android:layout_below="@+id/textView2"
        tools:layout_editor_absoluteY="66dp"
        tools:layout_editor_absoluteX="16dp"
        android:layout_alignLeft="@+id/textView5"
        android:layout_alignStart="@+id/textView5" />

    <EditText
        android:id="@+id/textView4"
        android:layout_width="292dp"
        android:layout_height="47dp"
        android:hint="No. e-KTP"
        android:paddingLeft="15dp"
        android:inputType="number"
        android:background="@drawable/wijetkrem"
        android:layout_marginTop="5dp"
        tools:layout_editor_absoluteX="66dp"
        tools:layout_editor_absoluteY="16dp"
        android:layout_below="@+id/textView3"
        android:layout_alignRight="@+id/textView2"
        android:layout_alignEnd="@+id/textView2" />

    <EditText
        android:id="@+id/textView5"
        android:layout_width="292dp"
        android:layout_height="47dp"
        android:hint="No. Telepon Seluler"
        android:paddingLeft="15dp"
        android:layout_marginTop="5dp"
        android:inputType="number"
        android:background="@drawable/wijetkrem"
        android:layout_below="@+id/textView4"
        tools:layout_editor_absoluteY="166dp"
        tools:layout_editor_absoluteX="16dp"
        android:layout_centerHorizontal="true" />
    <EditText
        android:id="@+id/textView6"
        android:layout_width="292dp"
        android:layout_height="47dp"
        android:hint="Permodalan"
        android:paddingLeft="15dp"
        android:inputType="number"
        android:layout_marginTop="5dp"
        android:background="@drawable/wijetkrem"
        tools:layout_editor_absoluteY="166dp"
        tools:layout_editor_absoluteX="16dp"
        android:layout_below="@+id/textView5"
        android:layout_alignLeft="@+id/textView5"
        android:layout_alignStart="@+id/textView5"
        android:layout_marginBottom="54dp" />
    <EditText
        android:id="@+id/textView7"
        android:layout_width="90dp"
        android:layout_height="47dp"
        android:hint="Bagi Hasil"
        android:paddingLeft="15dp"
        android:inputType="number"
        android:background="@drawable/wijetkrem"
        tools:layout_editor_absoluteY="166dp"
        tools:layout_editor_absoluteX="16dp"
        android:layout_alignTop="@+id/textView6"
        android:layout_alignLeft="@+id/textView4"
        android:layout_alignStart="@+id/textView4"
        android:layout_marginTop="50dp"
        android:layout_alignRight="@+id/textView6"
        android:layout_alignEnd="@+id/textView6" />
    <Button
        android:layout_width="100dp"
        android:layout_height="47dp"
        android:background="@color/colorAccent"
        android:text="TOTAL"
        android:id="@+id/btnTotal"
        android:layout_alignBaseline="@+id/textCap"
        android:layout_alignBottom="@+id/textCap"
        android:layout_toLeftOf="@+id/textCap"
        android:layout_toStartOf="@+id/textCap" />
    <Button
        android:layout_width="100dp"
        android:layout_height="47dp"
        android:background="@color/colorPrimary"
        android:text="PERIODE"
        android:id="@+id/btnProid"
        android:layout_below="@+id/textCap"
        android:layout_alignLeft="@+id/textView7"
        android:layout_alignStart="@+id/textView7"
        android:layout_marginTop="19dp" />
    <TextView
        android:id="@+id/textCap"
        android:layout_width="190dp"
        android:layout_height="47dp"
        android:hint="Kapitalisasi"
        android:inputType="number"
        android:gravity="center_horizontal|center_vertical"
        android:background="@drawable/wijetkrem"
        android:layout_below="@+id/textView6"
        android:layout_alignRight="@+id/textView7"
        android:layout_alignEnd="@+id/textView7" />
    <TextView
        android:id="@+id/textPriod"
        android:layout_width="190dp"
        android:layout_height="47dp"
        android:hint="Periode"
        android:inputType="number"
        android:gravity="center_horizontal|center_vertical"
        android:background="@drawable/wijetkrem"
        android:layout_alignTop="@+id/btnProid"
        android:layout_alignLeft="@+id/textCap"
        android:layout_alignStart="@+id/textCap" />


    <Button
        android:id="@+id/buttonKrm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kirim"
        android:background="@drawable/wijetkuning"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/textPriod"
        android:layout_toRightOf="@+id/btnProid"
        android:layout_toEndOf="@+id/btnProid" />
</RelativeLayout>
